<Window x:Class="DynamicWallpaper.UI.src.Screens.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicWallpaper.UI.src.Screens"
        mc:Ignorable="d"
        Title="PreviewWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="PreviewImage" Stretch="Uniform"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Background="#AA000000">
            <Button Content="Aplicar" Click="ApplyWallpaper" Margin="5" Width="100"/>
            <Button Content="Cancelar" Click="Cancel" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
