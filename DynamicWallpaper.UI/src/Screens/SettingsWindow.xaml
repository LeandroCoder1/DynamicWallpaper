<Window x:Class="DynamicWallpaper.UI.src.Screens.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicWallpaper.UI.src.Screens"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Configurações" FontSize="20" FontWeight="Bold" 
                       Foreground="{DynamicResource MaterialDesignBody}"/>

            <CheckBox Content="Habilitar Tema Escuro" Margin="10 20 0 0" 
                      IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"/>

        </StackPanel>
    </Grid>
</Window>
